@page
@model BookManagement.Pages.Reservations.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Reservation.Id" />
            <div class="form-group">
                <label asp-for="Reservation.BorrowDate" class="control-label"></label>
                <input asp-for="Reservation.BorrowDate" class="form-control" />
                <span asp-validation-for="Reservation.BorrowDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ReturnDate" class="control-label"></label>
                <input asp-for="Reservation.ReturnDate" class="form-control" />
                <span asp-validation-for="Reservation.ReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.ActualReturnDate" class="control-label"></label>
                <input asp-for="Reservation.ActualReturnDate" class="form-control" />
                <span asp-validation-for="Reservation.ActualReturnDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.PatronId" class="control-label"></label>
                <select asp-for="Reservation.PatronId" class="form-control" asp-items="ViewBag.PatronId"></select>
                <span asp-validation-for="Reservation.PatronId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reservation.BookId" class="control-label"></label>
                <select asp-for="Reservation.BookId" class="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="Reservation.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
