@page
@model ReturnBookModel
@{
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
            
            <div class="form-group">
                <label class="control-label">Book Title</label>
                <div>
                    <p class="form-control-static">@Model.Reservation.Book.Title</p>
                </div>
            </div>
            
            <div class="form-group">
                <label class="control-label">Borrowed Date</label>
                <div>
                    <p class="form-control-static">@Model.Reservation.BorrowDate.ToString("MM-dd-yyyy")</p>
                </div>
            </div>
            
            @if(Model.Reservation.ActualReturnDate == DateTime.MinValue) {
                
                <input type="hidden" asp-for="ReturnBookForm.ReservationId" />
                <div class="form-group">
                    <label asp-for="ReturnBookForm.ActualReturnDate" class="control-label"></label>
                    <input asp-for="ReturnBookForm.ActualReturnDate" class="form-control" />
                    <span asp-validation-for="ReturnBookForm.ActualReturnDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Return Book" class="btn btn-danger" />
                </div>
            } else {
                 <div class="form-group">
                    <label class="control-label">Actual Return Date</label>
                    <div>
                        <p class="form-control-static">@Model.Reservation.ActualReturnDate.Value.ToString("MM-dd-yyyy")</p>
                    </div>
                </div>
                <div class="alert alert-warning">
                    <p>This book is already returned.</p>
                </div>
            }
        </form>
    </div>
</div>