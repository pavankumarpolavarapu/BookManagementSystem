@page
@model BorrowBookModel
@{
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <form method="post" style="margin-top: 50px;">
            
            <div class="form-group">
                <label asp-for="BorrowBookForm.BookId" class="control-label"></label>
                <select asp-for="BorrowBookForm.BookId" class ="form-control" asp-items="ViewBag.BookId"></select>
                <span asp-validation-for="BorrowBookForm.BookId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BorrowBookForm.PatronId" class="control-label"></label>
                <select asp-for="BorrowBookForm.PatronId" class ="form-control" asp-items="ViewBag.PatronId"></select>
                <span asp-validation-for="BorrowBookForm.PatronId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Borrow Book" class="btn btn-danger" />
            </div>
            
        </form>
    </div>
</div>